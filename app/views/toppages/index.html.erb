  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>欲しい物を買える喜びをあなたへ</h1>
          <% unless logged_in? %>
            <%= link_to 'ボーナスで買おう！！を始める', signup_path, class: 'btn btn-success btn-lg' %>
          <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= render 'items/items', items: @items %>
